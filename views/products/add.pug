extends ../layout

block content
    h1 Add New Product
    form(action="/products/add",method="post")
        .form-group
            label(for="name") Product Name
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="price") Product Price
            input#price(type="text", class="form-control", name="price")
        .form-group
            label(for="modelname") Model Name
            input#modelname(type="text", class="form-control", name="modelname")
        .form-group
            label(for="quantity") Quantity
            input#quantity(type="text", class="form-control", name="quantity")
        input(type="submit", class="btn btn-info")