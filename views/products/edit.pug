extends ../layout

block content
    h1 Update/Edit Product
    form(action="/products/edit/"+product._id,method="post")
        .form-group
            label(for="name") Product Name
            input#name(type="text", class="form-control", name="name", value=product.name)
        .form-group
            label(for="price") Product Price
            input#price(type="text", class="form-control", name="price" value=product.price)
        .form-group
            label(for="modelname") Model Name
            input#modelname(type="text", class="form-control", name="modelname" value=product.modelname)
        .form-group
            label(for="quantity") Quantity
            input#modelname(type="text", class="form-control", name="quantity" value=product.quantity)
        input(type="submit", class="btn btn-info")