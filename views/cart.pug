extends layout

block content
  h1 My Shopping Cart
  -var total = 0;
    table.table
      thead
        th Name
        th Price
        th Model Name
        th Quantity
      tbody
        each item in cart
          -total+=Number(item.price)
          tr
            td=item.name
            td=item.price
            td=item.modelname
            td
              a(href="/products/cart/remove/"+item._id,class="btn btn-danger") Remove 
      tfoot
        tr
          td Total
          td=total
